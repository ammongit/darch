{
    "darch": {
        "compression": "7z",
        "encrypted": true,
        "run-mhash": true,
        "clear-recent": true
    },

    "filetree": {
        "output-file": "filetree.pickle",
        "hash-algorithm": "md5"
    },

    "mhash": {
        "extensions": [
            "bmp",
            "gif",
            "jpeg",
            "jpg",
            "m4a",
            "mkv",
            "mpeg",
            "mp3",
            "mp4",
            "ogg",
            "opus",
            "png",
            "svg",
            "tif",
            "tiff",
            "webm",
            "webp",
            "wmv"
        ],

        "rename-extensions": {
            "jpeg": "jpg"
        },

        "ignore-extensions": [
            "json",
            "pickle"
        ],
        
        "hash-algorithm": "sha1",
        "ignore-file": ".ignore",

        "run-on-all-files": false,
        "write-hash-log": true,
        "ask-confirmation": true,
        "use-trash": false,
        "delete-in-other-dirs": true,
        "follow-symbolic-links": false,
        "pause": false,
        "dry-run": false
    }
}

